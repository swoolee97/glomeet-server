<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.glomeet.mapper.RefreshTokenMapper">
    <insert id="insertToken">
        INSERT INTO refreshToken(token, userEmail)
        VALUES (#{refreshToken}, #{userEmail})
    </insert>
    <delete id="deleteToken">
        DELETE
        FROM refreshToken
        WHERE userEmail = #{email}
    </delete>
    <select id="findTokenByEmail">
        SELECT token
        FROM refreshToken
        WHERE userEmail = #{email}
    </select>
    <update id="updateRefreshToken">
        UPDATE refreshToken
        SET token = #{refreshToken}
        WHERE userEmail = #{email}
    </update>
</mapper>
